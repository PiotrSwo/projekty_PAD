        <TextBox HorizontalAlignment="Left" Height="31" Margin="10,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="78"/>
        <Label Content="km" HorizontalAlignment="Left" Height="27" Margin="326,10,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="2.041,0.416"/>
