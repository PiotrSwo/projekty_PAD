        <TextBlock x:Name="txtkmh" HorizontalAlignment="Left" Height="20" Margin="181,112,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="68" Grid.RowSpan="2"/>
        <TextBlock x:Name="txtmh" HorizontalAlignment="Left" Height="20" Margin="327,112,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="68" RenderTransformOrigin="2.85,3.992" Grid.RowSpan="2"/>

